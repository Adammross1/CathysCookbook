  <h3>Edit User</h3>
  <!-- 
  Form for editing a user with action /editUser and method post -->

  <div class="form">
    <form method="post" action="/editUser">
      <input type="hidden" id="editActiveUsername" name="editActiveUsername" value="<%= editActiveUsername %>">
      <label for="editUserName">Username</label>
      <input type="text" id="editUserName" name="editUserName" value="<%= userList[0].username%>" required>
      <br><br>
      <label for="editPassword">Password</label>
      <input type="text" id="editPassword" name="editPassword" value="<%= userList[0].up_password %>" required>
      <br><br>
      <label for="editFirstName">First Name</label>
      <input type="text" id="editFirstName" name="editFirstName" value="<%= userList[0].userfirstname %>" required>
      <br><br>
      <label for="editLastName">Last Name</label>
      <input type="text" id="editLastName" name="editLastName" value="<%= userList[0].userlastname %>" required>
      <br><br>
      <label for="editEmail">Email</label>
      <input type="text" id="editEmail" name="editEmail" value="<%= userList[0].email %>" required>
      <br><br>

      <button type="submit">Save</button>
    </form>
  </div>

  <div class="space"></div>
  <div class="space"></div>
  <div class="space"></div>
